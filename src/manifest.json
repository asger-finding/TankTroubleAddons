{
    "name": "__MSG_name__",
    "description": "__MSG_description__",
    "homepage_url": "https://github.com/llagerlof/fresh-chrome-extension",
    "version": "0.0.1",
    "default_locale": "en",
    "manifest_version": 3,
    "action": {
        "default_title": "execute.js will run (watch the Chrome DevTools' console)"
    },
    "content_scripts": [{
            "run_at": "document_start",
            "js": ["js/content.js"],
            "matches": [ "*://*.tanktrouble.com/*" ]
        },
        {
            "run_at": "document_idle",
            "js": ["js/after.js"],
            "matches": [ "*://*.tanktrouble.com/*" ]
        },
        {
            "css": ["css/styles.css"],
            "matches": [ "*://*.tanktrouble.com/*" ]
        }
    ],
    "background": {
        "service_worker": "js/service.js"
    },
    "declarative_net_request": {
        "rule_resources": [{
            "id": "ruleset_1",
            "enabled": true,
            "path": "config/rules.json"
        }]
    },
    "permissions": [
        "declarativeNetRequest",
        "declarativeNetRequestFeedback",
        "tabs",
        "scripting"
    ],
    "host_permissions": [
        "*://*.tanktrouble.com/*"
    ],
    "web_accessible_resources": [{
        "resources": ["*"],
        "matches": ["*://*.tanktrouble.com/*"]
    }]
}